@model EmployeeViewModel
@{
    ViewData["Title"] = "Create";

}

<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Create Employee</h1>
    <form method="post" asp-controller="Employees" asp-action="Create" class=" row col-8" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>
        
        <partial name="PartialViews/_CreateEditPartialView"/>

        <div class="form-group mb-3 col-6">
            <label class="form-label" asp-for="EmployeeType"></label>
            <select class="form-control" asp-for="EmployeeType" asp-items="Html.GetEnumSelectList<EmployeeType>()">
                <option value="">Select Employee Type</option>
            </select>
            <span asp-validation-for="EmployeeType" class="text-danger"></span>
        </div>


        <div class="form-group mb-3 col-6">
            <label class="form-label" asp-for="Gender"></label>
            <div>
                @foreach(var genderOption in Enum.GetValues<Gender>())
                {
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Gender" value="@genderOption"/>
                        <label class="form-check-label">@genderOption</label>
                    </div>
                }
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>


        <div class="mt-4 m-auto">
            <input class="btn btn-primary" type="submit" value="Save" />
            <a asp-controller="Employees" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
        </div>
    </form>
</div>

@section ValidationScripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}


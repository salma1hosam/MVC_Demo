@model UserDetailsViewModel
@{
	ViewData["Title"] = "Delete";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center align-content-center mt-3">
	<h1 class="col-8 my-4">Are You Sure You Want To Delete @Model.FirstName @Model.LastName ?</h1>
	<form method="post" asp-controller="Users" asp-action="DeleteUser" class="row col-8" enctype="multipart/form-data">

		<partial name="PartialViews/_DetailsDeletePartialView" />

		<div class="mt-4 m-auto">
			<input class="btn btn-danger" type="submit" value="Delete" />
			<a asp-controller="Users" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
		</div>
	</form>
</div>


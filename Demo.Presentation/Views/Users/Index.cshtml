@model IEnumerable<UserViewModel>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Users</h1>
<br />


<div class="m-4">
	<form asp-action="Index" class="row offset-2" method="get">
		<div class="col-8">
			<input class="form-control" type="text" name="UserSearchName" placeholder="User's Name" />
		</div>
		<div class="col-4">
			<input type="submit" class="btn btn-info" value="Search" />

		</div>
	</form>

</div>


@if (Model.Any())
{
	<table class="table table-striped table-hover mt-3">
		<thead class="text-center">
			<tr>
				<th>@Html.DisplayNameFor(u => u.Id)</th>
				<th>@Html.DisplayNameFor(u => u.FirstName)</th>
				<th>@Html.DisplayNameFor(u => u.LastName)</th>
				<th>@Html.DisplayNameFor(u => u.Email)</th>
				<th>@Html.DisplayNameFor(u => u.PhoneNumber)</th>
				<th>@Html.DisplayNameFor(u => u.Role)</th>
				<th>Details</th>
				<th>Update</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody class="text-center mt-3">
			@foreach (var user in Model)
			{
				<tr>
					<td>@user.Id</td>
					<td>@user.FirstName</td>
					<td>@user.LastName</td>
					<td>@user.Email</td>
					<td>@(string.IsNullOrEmpty(user.PhoneNumber) ? "No Phone Number" : user.PhoneNumber)</td>
					<td>@user.Role</td>
					<td>
						<a asp-action="Details" asp-route-id="@user.Id">
							<i class="fa-solid fa-eye" style="color: #5a9fd3;"></i>
						</a>
					</td>
					<td>
						<a asp-action="Edit" asp-route-id="@user.Id">
							<i class="fa-solid fa-pen-to-square" style="color: #FFD43B;"></i>
						</a>
					</td>
					<td>
						<a asp-action="Delete" asp-route-id="@user.Id">
							<i class="fa-solid fa-trash" style="color: #ff0000;"></i>
						</a>
					</td>

				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="alert alert-info mt-3">
		<h2>No Users Found !!</h2>
	</div>
}


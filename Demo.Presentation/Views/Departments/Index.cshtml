@model IEnumerable<DepartmentDto>
@{
    ViewData["Title"] = "Index";
}

<h1 class="my-3">All Departments</h1>

<a class="btn btn-primary my-3" asp-controller="Departments" asp-action="Create">Create New Department</a>

@if(Model?.Any() ?? false)  //Model -> Property that represents the rendered model
{
    <table class="table table-striped table-hover mt-2">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(D => D.Code)</th> <!--The Content of the Table Header Cell-->
                <th>@Html.DisplayNameFor(D => D.Name)</th> 
                <th>@Html.DisplayNameFor(D => D.Description)</th> 
                <th>@Html.DisplayNameFor(D => D.DateOfCreation)</th> 
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach(var departemnt in Model)
            {
                <tr>
                    <td>@departemnt.Code</td> <!--The Content of the Table Body Cell-->
                    <td>@departemnt.Name</td> 
                    <td>@departemnt.Description</td> 
                    <td>@departemnt.DateOfCreation</td> 
                    <td><a class="btn btn-primary" asp-action="Details" asp-route-Id="@departemnt.DeptId"><i class="fas fa-eye"></i>Details</a></td>
                    <td><a class="btn btn-success" asp-action="Edit" asp-route-Id="@departemnt.DeptId"><i class="fas fa-edit"></i>Edit</a></td>
                    <td><a class="btn btn-danger" asp-action="Delete" asp-route-Id="@departemnt.DeptId"><i class="fas fa-trash"></i>Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-2">
        <h2>No Departments Found !!</h2>
    </div>
}


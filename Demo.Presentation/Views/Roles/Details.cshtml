@model RoleViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center align-content-center mt-3">
	<h1 class="col-8 my-4">@Model.RoleName Details</h1>
	<form method="get" asp-controller="Roles" asp-action="Edit" class="row col-8" enctype="multipart/form-data">

		<partial name="PartialViews/_DetailsAndDeletePartialView" />

		<div class="mt-4 m-auto">
			<input class="btn btn-warning" type="submit" value="Edit" />
			<a asp-controller="Roles" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
		</div>
	</form>
</div>

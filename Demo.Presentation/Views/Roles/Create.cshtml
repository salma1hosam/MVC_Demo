@model CreateRoleViewModel
@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center align-content-center mt-3">
	<h1 class="col-8 my-4">Add New Role</h1>

	<form class="col-12" method="post" asp-controller="Roles" asp-action="Create">

		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<div class="form-group mb-3">
			<label class="form-label" asp-for="RoleName"></label>
			<input asp-for="RoleName" class="form-control" />
			<span asp-validation-for="RoleName" class="text-danger"></span>
		</div>

		<div class="mt-4 m-auto">
			<input class="btn btn-success" type="submit" value="Create" />
			<a class="btn btn-outline-dark" asp-controller="Roles" asp-action="Index">Back to list</a>
		</div>
	</form>
</div>

